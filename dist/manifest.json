{
  "manifest_version": 3,
  "name": "Blob Avatar",
  "version": "1.0",
  "description": "Injects a Blob avatar to any page",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Blob Avatar"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["app.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*.js",
        "assets/*.glb",
        "*.glb",
        "app.js",
        "background.js",
        "assets/draco/draco_decoder.js",
        "assets/draco/draco_decoder.wasm",
        "assets/draco/draco_wasm_wrapper.wasm"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
